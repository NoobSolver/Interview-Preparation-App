<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/graylight"
    tools:context="com.dorvis.quizapp.fragments.FirstHomeFragment"
    android:padding="10dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/dq_imageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:adjustViewBounds="false"
            android:background="@drawable/circle"
            android:contentDescription="@string/daily_quiz"
            android:padding="10dp"
            android:paddingTop="13dp"
            app:srcCompat="@drawable/ic_event_dailyquiz_black_24dp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="64dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/dq_imageView"
            android:layout_alignStart="@+id/dq_imageView"
            android:layout_below="@+id/dq_imageView"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/daily_quiz"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/interview_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle"
            android:contentDescription="@string/interview"
            android:paddingTop="13dp"
            app:srcCompat="@drawable/ic_interview_black_24dp" />

        <TextView
            android:layout_width="64dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:text="@string/interview"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_alignLeft="@+id/interview_img"
            android:layout_alignStart="@+id/interview_img"
            android:layout_below="@+id/interview_img" />

        <ImageView
            android:id="@+id/technews_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/interview_img"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/circle"
            android:contentDescription="@string/tech_news"
            android:paddingTop="12dp"
            app:srcCompat="@drawable/ic_tv_black_24dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="64dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/technews_img"
            android:layout_alignStart="@+id/technews_img"
            android:layout_below="@+id/technews_img"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/tech_news"
            android:textSize="10sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a49797"
        />

<!-- android:background="#a49797" -->
    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/bankcardId"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp" android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageview_andy"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="@string/android"
                android:padding="10dp"
                android:src="@drawable/androidicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/android"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_margin="10dp"/>

        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp" android:focusable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView_cprogram"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="@string/cprogram"
                android:padding="10dp"
                android:src="@drawable/iconcprogram" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:text="@string/c_program"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_margin="10dp"/>

        </LinearLayout>
        </android.support.v7.widget.CardView>

        </LinearLayout>
    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp" android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView_python"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:contentDescription="@string/Interview"
                    android:padding="10dp"
                    android:src="@drawable/iconpython" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10sp"
                    android:text="@string/python"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:layout_margin="10dp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp" android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_java"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:contentDescription="@string/java"
                    android:padding="10dp"
                    android:src="@drawable/javaicon8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="@string/java"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/lightgray" />


            </LinearLayout>
        </android.support.v7.widget.CardView>




    </LinearLayout>

</LinearLayout>